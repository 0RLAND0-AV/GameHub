
# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
POSTGRES_USER= TestUser
POSTGRES_PASSWORD=password
POSTGRES_DB=GameHubDB
PGDATA=/var/lib/postgresql/data/pgdata
PGHOST=localhost
PGPORT=5432

DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${PGHOST}:${PGPORT}/${POSTGRES_DB}"

# JWT Configuration
JWT_SECRET= secret
JWT_EXPIRES_IN=7d

# Bcrypt Configuration
SALT_ROUNDS=10

# Game Configuration
INITIAL_COINS=100
MIN_BET=10
MAX_BET=1000
COUNTDOWN_SECONDS=30
QUESTIONS_PER_GAME=10
TIME_PER_QUESTION=15

# Points Calculation
BASE_POINTS=10
SPEED_BONUS_MULTIPLIER=2

# Prize Distribution by Player Count (as decimals)
# 2 Players - Winner takes most
PRIZE_2P_FIRST=0.80
PRIZE_2P_SECOND=0.20

# 3 Players - Top 2 get rewards
PRIZE_3P_FIRST=0.60
PRIZE_3P_SECOND=0.30
PRIZE_3P_THIRD=0.10

# 4 Players - Top 3 get rewards
PRIZE_4P_FIRST=0.50
PRIZE_4P_SECOND=0.30
PRIZE_4P_THIRD=0.20
PRIZE_4P_FOURTH=0.00

# 5 Players - Top 4 get rewards
PRIZE_5P_FIRST=0.40
PRIZE_5P_SECOND=0.30
PRIZE_5P_THIRD=0.20
PRIZE_5P_FOURTH=0.10
PRIZE_5P_FIFTH=0.00